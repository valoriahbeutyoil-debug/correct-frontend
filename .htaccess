# -------------------------------
# BEGIN .htaccess for Onlinedocumentstore
# -------------------------------

# Enable mod_rewrite
RewriteEngine On

# Force HTTPS and redirect non-www to www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\.onlinedocumentstore\.io$ [NC]
RewriteRule ^(.*)$ https://www.onlinedocumentstore.io/$1 [L,R=301]

# -------------------------------
# 301 Redirects for old pages (if needed)
# Example: Redirect old page to new page permanently
# -------------------------------
# Redirect 301 /old-page.html https://www.onlinedocumentstore.io/new-page.html

# -------------------------------
# Prevent directory browsing
# -------------------------------
Options -Indexes

# -------------------------------
# Custom Error Pages
# -------------------------------
ErrorDocument 404 /404.html
ErrorDocument 403 /403.html

# -------------------------------
# Caching and compression (optional but improves speed)
# -------------------------------
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript
</IfModule>

# -------------------------------
# END .htaccess
# -------------------------------
